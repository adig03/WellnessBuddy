<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".auth.Fragments.ConfirmFragment"
    tools:theme="@style/Theme.AppCompat.DayNight.NoActionBar">


<com.airbnb.lottie.LottieAnimationView
    android:id="@+id/welcomeImg"
    android:layout_height="300dp"
    android:layout_width="300dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="100dp"
    app:lottie_rawRes="@raw/meditation"
    app:lottie_autoPlay="true"
    app:lottie_loop="true"/>
    <TextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Successful"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/color_primary_light"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@id/welcomeImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="70dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ContinueBtn"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_height="56dp"
        android:backgroundTint="#3461FD"
        android:drawablePadding="8dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/poppins_medium"
        android:shadowColor="@color/black"
        android:text="Continue"
        android:elevation="8dp"
        android:textAllCaps="false"
        android:textColor="#FFFF"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginText" />







</androidx.constraintlayout.widget.ConstraintLayout>
